<!DOCTYPE html>
<html  lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login & Registration</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/CSS/style.css">
    <link rel="stylesheet" href="/CSS/utility.css">

</head>

<body>
    <%- include('navbar') %>
<div class="form-container custom-login-form">
    <!-- Form Navigation -->
    <div class="form-title custom-form-title">
        <h3>Login</h3>
        <h4 id="inf-message"><%- inf %></h4>
    </div>

    <!-- Login Form -->
    <div id="login-form" class="custom-tab-content <%= inf ? 'active' : '' %>">
        <form action="/auth/login" method="POST">
            <div class="mb-3">
                <label for="login-contact" class="custom-form-label label1">Contact</label>
                <input type="text" name="contact" class="custom-form-control" id="login-contact"
                    placeholder="Enter your email or mobile" required>
            </div>
            <div class="mb-3">
                <label for="login-password" class="custom-form-label label1">Password</label>
                <input type="password" name="password" class="custom-form-control" id="login-password"
                    placeholder="Enter your password" required>
                <a href="javascript:void(0)" class="forgot-password custom-forgot-password"
                    id="forgot-password-link">Forgot Password?</a>
            </div>
            <button type="submit" class="custom-btn custom-btn-submit">Login</button>
        </form>

        <div class="custom-switch-btns">
            <a href="javascript:void(0)" id="switch-to-register">Don't have an account? Register</a>
        </div>
    </div>

    <!-- Registration Form -->
    <div id="register-form" class="custom-tab-content">
        <form action="/auth/register" method="POST">
            <div class="mb-3">
                <label for="register-name" class="custom-form-label label1">Full Name</label>
                <input type="text" name="name" class="custom-form-control" id="register-name"
                    placeholder="Enter your name" required>
            </div>
            <div class="mb-3">
                <label for="register-name" class="custom-form-label label1">Address</label>
                <input type="text" name="Address" class="custom-form-control" id="register-name" placeholder="Your Location"
                    required>
            </div>
            <div class="mb-3">
                <label for="register-contact-type" class="custom-form-label label1">Contact Type</label>
                <select name="contactType" class="custom-form-control" id="register-contact-type" required>
                    <option value="email">Email</option>
                    <option value="mobile">Mobile</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="register-contact" class="custom-form-label label1">Contact</label>
                <input type="text" name="contact" class="custom-form-control" id="register-contact"
                    placeholder="Enter your email or mobile" required>
            </div>
            <div class="mb-3">
                <label for="register-role" class="custom-form-label label1">Role</label>
                <select name="role" class="custom-form-control" id="register-role" required>
                    <option value="farmer">Farmer</option>
                    <option value="trader">Trader</option>
                    <option value="other">Other</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="register-password" class="custom-form-label label1">Password</label>
                <input type="password" name="password" class="custom-form-control" id="register-password"
                    placeholder="Enter your password" required>
            </div>
            <!-- Live feedback area -->
            <small id="password-warning" style="color: red;"></small>

            <div class="mb-3">
                <label for="register-confirm-password" class="custom-form-label label1">Confirm Password</label>
                <input type="password" name="confirm_password" class="custom-form-control"
                    id="register-confirm-password" placeholder="Confirm your password" required>
            </div>
            <button type="submit" class="custom-btn">Register</button>
        </form>

        <div class="custom-switch-btns">
            <a href="javascript:void(0)" id="switch-to-login">Already have an account? Login</a>
        </div>
    </div>

    <!-- Forgot Password Form -->
    <div id="forgot-password-form" class="custom-tab-content" style="display: none;">
        <form id="forgot-password-form-submit" action="/auth/forgot-password" method="POST">
            <div class="mb-3">
                <label for="reset-contact" class="custom-form-label">Enter your contact</label>
                <input type="text" name="contact" class="custom-form-control" id="reset-contact"
                    placeholder="Enter your email or mobile" required>
            </div>
            <button type="submit" class="custom-btn" id="send-reset-link">Next</button>
        </form>

        <div class="custom-switch-btns">
            <a href="javascript:void(0)" id="switch-back-to-login">Back to Login</a>
        </div>
    </div>
</div>



        <%- include('footer') %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
            <script src="/js/script.js"></script>
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</body>

</html>