<body>
    <%- include("navbar"); %>

        <!-- Hero Section -->
        <div class="container-fluid hero-section text-center mt-4"
            style="background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.3)), url('/images/cont3.png') no-repeat center center/cover;">
            <div class="container">
                <h1 class="display-4 fw-bold text-white">ðŸŒ¿ Welcome to Crop Monitoring</h1>
                <p class="lead text-white">Empowering Farmers with Smart Agriculture Solutions</p>
                <a href="#crop-monitoring" class="btn btn-light btn-lg mt-3 fw-bold shadow-lg">ðŸš€ Explore Features</a>
            </div>
        </div>

<div class="card m-auto mt-5 p-5 flex justify-content-center align-items-center shadow-lg p-4 rounded" style="max-width: 75%;">
    <h3 class="text-center">ðŸŒ¾ Crop Yield Prediction</h3>
    <form id="predictionForm" style="max-width: 90%;">
        <label class="form-label">Region:</label>
        <select class="form-select" id="region" name="region">
            <option>North</option>
            <option>South</option>
            <option>East</option>
            <option>West</option>
        </select>

        <label class="form-label mt-2">Crop Type:</label>
        <select class="form-select" id="crop_type" name="crop_type">
            <option>Maize</option>
            <option>Rice</option>
            <option>Barley</option>
            <option>Wheat</option>
            <option>Cotton</option>
            <option>Soybean</option>
        </select>

        <label class="form-label mt-2">Soil Type:</label>
        <select class="form-select" id="soil_type" name="soil_type">
            <option>Sandy</option>
            <option>Loam</option>
            <option>Chalky</option>
            <option>Silt</option>
            <option>Clay</option>
            <option>Peaty</option>
        </select>

        <label class="form-label mt-2">Weather Condition:</label>
        <select class="form-select" id="weather_condition" name="weather_condition">
            <option>Sunny</option>
            <option>Rainy</option>
            <option>Cloudy</option>
        </select>

        <label class="form-label mt-2">Days to Harvest:</label>
        <input type="number" class="form-control" id="days" name="days" min="1" max="365" value="90" required>

        <label for="latitude">Latitude:</label>
        <input type="text" id="latitude" name="latitude" placeholder="Auto-filled" required readonly>

        <label for="longitude">Longitude:</label>
        <input type="text" id="longitude" name="longitude" placeholder="Auto-filled" required readonly>

        <button type="submit" class="btn btn-primary w-100 mt-3" onclick="fetchPrediction(event)">Predict Yield</button>
    </form>

    <!-- Display prediction results here -->
    <div id="predictionResult" class="mt-3"></div>
</div>
<div id="predictionResult1" class="mt-3"></div>
    </div>
